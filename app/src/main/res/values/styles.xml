<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeAuth" parent="AppThemeNoActionBar">
        <item name="colorPrimary">@color/colorPrimaryAuth</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAuth</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/backButton</item>
    </style>

    <style name="Theme.App.Base" parent="AppTheme">
        <item name="colorControlNormal">@color/backButton</item>
        <item name="colorControlActivated">@color/backButton</item>
        <item name="colorControlHighlight">@color/backButton</item>
    </style>

</resources>
