<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeAuth" parent="AppThemeNoActionBar">
        <item name="colorPrimary">@color/colorPrimaryAuth</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkAuth</item>
        <item name="android:background">@color/colorPrimaryAuth</item>
    </style>

</resources>
